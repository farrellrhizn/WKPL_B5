<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.akun">

    <ImageButton
        android:id="@+id/button_Back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:src="@drawable/ic_baseline_arrow_back_24" />

    <TextView
        android:id="@+id/alert_jdl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Akun"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:textSize="24sp"
        android:textColor="@color/grey"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/poppins_semibold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:orientation="vertical"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/username_akun1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:hint="Username"
            android:fontFamily="@font/poppins_semibold"
            android:textSize="14sp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/username_akun"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:padding="10dp"
            android:hint="Username"
            android:maxLines="1"
            android:background="@drawable/radius2"
            android:fontFamily="@font/poppins_medium"
            android:textSize="16sp"
            android:textColor="@color/grey"
            android:layout_marginBottom="10dp" />

        <TextView
            android:id="@+id/namaLengkap_akun1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:hint="Nama Lengkap"
            android:fontFamily="@font/poppins_semibold"
            android:textSize="14sp"
            android:textColor="@color/grey" />

        <TextView
            android:id="@+id/namaLengkap_akun"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:hint="Nama Lengkap"
            android:maxLines="1"
            android:background="@drawable/radius2"
            android:fontFamily="@font/poppins_medium"
            android:textSize="16sp"
            android:textColor="@color/grey"
            android:layout_marginBottom="10dp" />

        <TextView
            android:id="@+id/alamat_akun11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:hint="Alamat"
            android:fontFamily="@font/poppins_semibold"
            android:textSize="14sp"
            android:textColor="@color/grey" />

        <TextView
            android:id="@+id/alamat_akun"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:hint="Alamat"
            android:maxLines="1"
            android:background="@drawable/radius2"
            android:fontFamily="@font/poppins_medium"
            android:textSize="16sp"
            android:textColor="@color/grey"
            android:layout_marginBottom="10dp" />

        <TextView
            android:id="@+id/nohp_akun1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:hint="Nomer Telepon"
            android:fontFamily="@font/poppins_semibold"
            android:textSize="14sp"
            android:textColor="@color/grey" />

        <TextView
            android:id="@+id/nohp_akun"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:hint="Nomer Telepon"
            android:maxLines="1"
            android:background="@drawable/radius2"
            android:fontFamily="@font/poppins_medium"
            android:textSize="16sp"
            android:textColor="@color/grey"
            android:layout_marginBottom="10dp" />

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_editakun"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="7dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/login"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:fontFamily="@font/poppins_bold"
        android:layout_gravity="center"
        android:text="Edit Akun" />

</LinearLayout>