<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".Activity.logout">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewLogout"
        android:layout_width="370dp"
        android:layout_height="320dp"
        app:cardBackgroundColor="@color/yelow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:padding="10dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image_set"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_gravity="center_horizontal"
                android:background="#00FFFFFF"
                app:srcCompat="@drawable/logout_gmbr" />

            <TextView
                android:id="@+id/txt_logout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="Apakah anda yakin ingin logout?"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:fontFamily="@font/poppins_semibold"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_logout1"
                    android:layout_width="130dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/logout"
                    android:textSize="16sp"
                    android:text="Ya"
                    android:textAllCaps="false"
                    android:fontFamily="@font/poppins_bold"
                    android:textColor="@color/grey"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_logout2"
                    android:layout_width="130dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="60dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/logout"
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    android:text="Tidak"
                    android:fontFamily="@font/poppins_bold"
                    android:textColor="@color/grey"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>